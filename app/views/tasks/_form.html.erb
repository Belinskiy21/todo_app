<%= form_tag user_list_tasks_path(user_id, list_id) do  %>
  <div class="input-group">
    <%= text_field_tag :content, nil, class: 'input-sm form-control' %>
    <%= hidden_field_tag :list_id, list_id %>

    <span class="input-group-btn">
      <%= submit_tag 'Create Task', class: 'input-sm btn btn-success' %>
    </span>
  </div>
<% end %>
