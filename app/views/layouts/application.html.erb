  </head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

  <body>
  <%=h flash[:error]%>
  <%=h flash[:notice]%>
    <%= yield %>
  </body>
</html>
